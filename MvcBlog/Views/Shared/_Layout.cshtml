<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Mvc Blog Mert</title>
    <!-- Bootstrap core CSS -->
    <link href="~/Content/tema/home/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Content/tema/home/css/blog-home.css" rel="stylesheet" />
    <link href="~/Content/tema/home/css/font-awesome.css" rel="stylesheet" />
    <link href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css" rel="stylesheet" /> 
    <link href="@Url.Content("~/Content/Gridmvc.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/Home/Index/">MVC Blog Tonti</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home/Index/">
                            Anasayfa
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Hakkimda/">Hakkımda</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Konular">Konular</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Iletisim">İletişim</a>
                    </li>
                    @if (Session["uyeId"] != null)
                    { 
                     <li class="nav-item">
                        <a class="nav-link" href="/Uye/Index/@Session["uyeId"]">@Session["kullaniciAdi"].ToString()</a>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="/Uye/Logout/">Çıkış</a></li>
                        if (Convert.ToInt32(Session["yetkiId"])==1)
                        {
                    <li class="nav-item"><a class="nav-link" href="/Admin/Index/">Admin Paneli</a></li>
                        }
                    }
                    else { 
                         <li class="nav-item">
                        <a class="nav-link" href="/Uye/Login/">Giriş</a>
                    </li> 
                         <li class="nav-item">
                        <a class="nav-link" href="/Uye/Create/">Kayıt Ol</a>
                    </li> 
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- Page Content -->
    <div class="container">
        <div class="row">
            <!-- Blog Entries Column -->
            <div class="col-md-8">
            @*Content*@
                @RenderBody()
            </div>
            <!-- Sidebar Widgets Column -->
            <div class="col-md-4">
                <!-- Search Widget -->
                <div class="card my-4">
                   @Html.Partial("BlogAraPartial")
                </div>
                <!-- Categories Widget -->
                <div class="card my-4">
                    @{
                        Html.RenderAction("KategoriPartial", "Home");
                    }
                </div>
                <!-- En çok okunanlar -->
                <div class="card my-4">
                    @{
                        Html.RenderAction("CokOkunanlar", "Home");
                    }
                </div>
                <!-- Categories Comments -->
                <div class="card my-4">
                    @{
                        Html.RenderAction("SonYorumlar", "Home");
                    }
                </div>
                <!-- Side Widget Hava Durumu-->
                <div class="card my-4">
                    <h5 class="card-header">Hava Durumu</h5>
                    <div class="card-body">
                        Hava Durumu: @{Html.Raw(ViewBag.HavaDurumu);}
                    </div>
                </div>
                <!-- Side Widget -->
                <div class="card my-4">
                    <h5 class="card-header">Side Widget</h5>
                    <div class="card-body">
                        You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container -->
    <!-- Footer -->
    <footer class="py-5 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; @DateTime.Now.Year</p>
        </div>
        <!-- /.container -->
    </footer>
    <!-- Bootstrap core JavaScript -->
        <script src="~/Content/tema/home/vendor/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Content/tema/home/vendor/jquery/jquery.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Content/tema/home/vendor/popper/popper.min.js"></script>
    <script src="@Url.Content("~/Scripts/gridmvc.min.js")" type="text/javascript"> </script>
</body>
</html>
