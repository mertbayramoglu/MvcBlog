@model IEnumerable<MvcBlog.Models.Kategori>

@{Layout = null;}
<h5 class="card-header">Kategoriler</h5>
<div class="card-body">
    <div class="row">
        <div class="col-lg-6">
            @foreach (var item in Model)
            {
           <ul class="list-unstyled mb-0">
                <li class="list-group-item mb-0">
                    <a href="/Home/KategoriMakale/@item.KategoriId">@item.KategoriAdi <span class="badge-pill badge-dark">@item.Makales.Count()</span></a>
                </li>
            </ul>
            }          
        </div>
    </div>
</div>

